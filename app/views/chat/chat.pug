extends ../layouts/default

block content
  .row.twitter-container
    .col-xl-12.col-lg-12.first-column
      .logged-user
        .row.chatbox
          - if (chats.length == 0)
            h2 No chats sorry!
          ul.chatlist
            - if (chats)
              each chat in chats
                li
                  //p #{chat.sender.pid} , #{chat.sender.role}
                  p.chatMessage
                  a(class='sender', href="/users/profile/" + chat.sender._id) 
                    span.sender #{chat.sender.name} , #{chat.sender.pid}: 
                  span.message #{chat.message} 
                  p.msgtime #{formatDate(chat.createdAt, "%b %d, %Y at %I:%M %p")}
          